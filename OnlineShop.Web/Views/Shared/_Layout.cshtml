<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-dark text-white text-center pt-3 mb-5">
        <div class="mt-3">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Online Shop</a>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom mb-n5">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center mb-4">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-gray border-bottom border-secondary mx-2" asp-area="" asp-controller="Products" asp-action="Index" onmouseover="highlightLink(this)" onmouseout="removeHighlight(this)">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-gray border-bottom border-secondary mx-2" asp-area="" asp-controller="StoreProducts" asp-action="Index" onmouseover="highlightLink(this)" onmouseout="removeHighlight(this)">Stocks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-gray border-bottom border-secondary mx-2" asp-area="" asp-controller="Stores" asp-action="Index" onmouseover="highlightLink(this)" onmouseout="removeHighlight(this)">Stores</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*     <footer class="border-top footer text-muted"> </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function highlightLink(link) {
            link.classList.add('border-white'); // Agrega negrita al pasar el ratón
            link.classList.add('text-white'); // Agrega negrita al pasar el ratón
        }

        function removeHighlight(link) {
            link.classList.remove('border-white'); // Elimina la negrita al salir el ratón
            link.classList.remove('text-white'); // Elimina la negrita al salir el ratón
        }
    </script>
</body>
</html>
